# 最小化 Docker 镜像
FROM python:3.11-slim

WORKDIR /app

# 设置环境变量
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PORT=8000

# 安装依赖
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# 复制代码
COPY zimage_proxy_simple.py .

# 暴露端口
EXPOSE 8000

# 运行
CMD ["python", "zimage_proxy_simple.py"]